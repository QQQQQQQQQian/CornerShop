<Window x:Class="CornerShop.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CornerShop"
        mc:Ignorable="d"
        Title="Corner Shop - Browsing" Height="600" Width="900" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" FontSize="20" VerticalAlignment="Center">
                <Run Text="Welcome, " Foreground="Gray"/>
                <Run Text="{Binding CurrentUser.Level}" FontWeight="Bold" Foreground="#D4AF37"/> <Run Text=" Member " Foreground="Gray"/>
                <Run Text="{Binding CurrentUser.Username}" FontWeight="Bold"/>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="🛒 Checkout" Click="Checkout_Click"
                        Background="#e67e22" Foreground="White" FontWeight="Bold"
                        Width="100" Height="35" Margin="0,0,10,0"/>

                <Button Content="Logout" Click="Logout_Click"
                        Background="#e74c3c" Foreground="White"
                        Width="80" Height="35"/>
            </StackPanel>
        </Grid>

        <ListView Grid.Row="1" ItemsSource="{Binding Products}" 
                  BorderThickness="0" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Width="180" Height="240" Margin="10" CornerRadius="8" Background="White" BorderBrush="#EEE" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel Margin="10">
                            <Border Height="100" Background="#F8F9FA" CornerRadius="4" Margin="0,0,0,10">
                                <TextBlock Text="Image" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC"/>
                            </Border>

                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding Category}" FontSize="12" Foreground="Gray" Margin="0,2"/>
                            <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" Foreground="#27ae60" FontWeight="Bold" FontSize="16" Margin="0,5"/>

                            <Button Content="Add to Cart" Click="AddToCart_Click" Tag="{Binding}" 
                                    Background="#3498db" Foreground="White" BorderThickness="0" Height="30" Margin="0,5,0,0" Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#2980b9"/>
        </StatusBar>
    </Grid>
</Window>
