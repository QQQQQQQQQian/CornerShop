<Window x:Class="CornerShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CornerShop"
        mc:Ignorable="d"
        Title="Corner Shop" Height="400" Width="400" WindowStartupLocation="CenterScreen" Background="#FFF7F7F7">
    <Grid Margin="20">
        <Border CornerRadius="10" Background="White" Padding="30">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Welcome to Corner Shop"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

                
                <TextBox x:Name="UsernameBox"
                         Height="35"
                         Margin="0,0,0,15"
                         Padding="10,0"
                         FontSize="14"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         Background="#F0F0F0"
                         VerticalContentAlignment="Center"
                         Foreground="#666">
                    <TextBox.Text>
                        <Binding RelativeSource="{RelativeSource Self}" Path="Tag" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                    </TextBox.Text>
                    <TextBox.Tag>Username</TextBox.Tag>
                </TextBox>

                <!-- Password -->
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             Margin="0,0,0,20"
                             Padding="10,0"
                             FontSize="14"
                             BorderBrush="#CCC"
                             BorderThickness="1"
                             Background="#F0F0F0"
                             VerticalContentAlignment="Center"/>
                

                <Button Content="Login"
                        Height="40"
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#FF6C00"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Login_Click"/>

                <Button Content="Register"
                        Height="35"
                        FontWeight="SemiBold"
                        Foreground="#FF6C00"
                        Background="Transparent"
                        BorderBrush="#FF6C00"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="Register_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
